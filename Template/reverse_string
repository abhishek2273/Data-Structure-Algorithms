void Reverse_String()
{
	  string original = "code";

    // Step 2: Convert string to vector of characters
    vector<char> charVector(original.begin(), original.end());

    // Step 3: Reverse the vector
    reverse(charVector.begin(), charVector.end());

    // Step 4: Convert vector back to string
    string reversed(charVector.begin(), charVector.end());

    // Output the reversed string
    cout << "Original: " << original << endl;
    cout << "Reversed: " << reversed << endl;
}
